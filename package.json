{
  "name": "sugary",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "build": "next build",
    "start": "next start",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --prefix none --success last \"next dev\" \"jest\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll",
    "migrate": "dotenv -e .env.development -- prisma migrate dev",
    "prepare": "husky",
    "commit": "cz",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint ."
  },
  "prisma": {
    "schema": "./src/infra/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "dotenv-cli": "^7.4.2",
    "dotenv-expand": "^11.0.6",
    "next": "^14.2.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.13",
    "@types/node": "22.7.6",
    "@types/react": "18.3.11",
    "async-retry": "^1.3.3",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "prisma": "^5.21.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "5.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
